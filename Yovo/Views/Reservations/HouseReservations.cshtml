@model IEnumerable<Yovo.Models.Reservation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@(ViewBag.House.Title)</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Renter.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Renter.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Renter.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Renter.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
